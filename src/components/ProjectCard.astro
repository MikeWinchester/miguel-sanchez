---
import { type Project } from '@/types';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-dark-700 rounded-xl overflow-hidden hover:bg-slate-600 transition-all duration-300 card-hover border border-slate-600 group">
  <!-- Imagen del proyecto -->
  <div class="relative overflow-hidden">
    <img 
      src={project.image || "/placeholder.svg"} 
      alt={project.title}
      class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>

  <!-- Contenido -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-3 group-hover:text-green-400 transition-colors">
      {project.title}
    </h3>
    
    <p class="text-gray-300 mb-4 leading-relaxed">
      {project.description}
    </p>

    <!-- Tecnologías -->
    <div class="flex flex-wrap gap-2 mb-6">
      {project.technologies.map((tech) => (
        <span class="bg-green-500/20 text-green-300 px-3 py-1 rounded-full text-xs font-medium">
          {tech}
        </span>
      ))}
    </div>

<!-- Enlaces -->
<div class="flex gap-4">
  {project.githubUrl && (
    <a 
      href={project.githubUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="flex items-center bg-slate-600 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
    >
      <!-- Icono GitHub -->
      GitHub
    </a>
  )}

  {project.liveUrl && (
    <a 
      href={project.liveUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="flex items-center border border-green-500 text-primary-400 hover:bg-green-500 hover:text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
    >
      <!-- Icono Demo -->
      Ver Demo
    </a>
  )}

  <!-- Nuevo botón "Ver más" -->
  <a 
    href={`/projects/${project.slug}`}
    class="flex items-center border border-slate-500 text-gray-300 hover:bg-slate-600 hover:text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
  >
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    Ver más
  </a>
</div>