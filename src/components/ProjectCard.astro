---
import { Image } from 'astro:assets';
import { type Project } from '@/types';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-slate-700 rounded-xl overflow-hidden border border-slate-600 group">
  <!-- Imagen del proyecto -->
  <div class="relative overflow-hidden">
    <Image 
      src={project.image || "/placeholder.svg"} 
      alt={project.title} 
      width={400}
      height={192}
      class="w-full h-48 object-cover"
      format="webp"
      quality={80}
    />
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent opacity-0"></div>
  </div>

  <!-- Contenido -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-3">
      {project.title}
    </h3>
    <p class="text-gray-300 mb-4 leading-relaxed">
      {project.description}
    </p>

    <!-- Tecnologías -->
    <div class="flex flex-wrap gap-2 mb-6">
      {project.technologies.map((tech) => (
        <span class="bg-green-500/20 text-green-300 px-3 py-1 rounded-full text-xs font-medium">
          {tech}
        </span>
      ))}
    </div>

    <!-- Enlaces -->
    <div class="flex flex-col sm:flex-row gap-3">
      {project.githubUrl && (
        <a 
          href={project.githubUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center bg-slate-600 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 30 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
      {project.liveUrl && (
        <a 
          href={project.liveUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center border border-green-500 text-green-400 hover:bg-green-500 hover:text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Demo
        </a>
      )}
      <a 
        href={`/projects/${project.slug}`} 
        class="flex items-center justify-center border border-slate-500 text-gray-300 hover:bg-slate-600 hover:text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Ver más
      </a>
    </div>
  </div>
</div>