---
import { Image } from 'astro:assets';
import { type Project } from '@/types';

export interface Props {
  project: Project;
}

const { project } = Astro.props;

// Configuración de límites
const MAX_DESCRIPTION_LENGTH = 120;
const MAX_VISIBLE_TAGS = 3;
---

<div class="bg-slate-700 rounded-xl overflow-hidden border border-slate-600 group h-full flex flex-col shadow-lg hover:shadow-xl hover:shadow-green-900/20 transition-all duration-300">
  <!-- Imagen del proyecto con optimización responsive -->
  <div class="relative overflow-hidden flex-shrink-0">
    <Image 
      src={project.image || "/placeholder.svg"} 
      alt={project.title} 
      width={600}
      height={300}
      class="w-full h-40 sm:h-48 md:h-52 object-cover object-center transition-transform duration-300 group-hover:scale-105"
      format="webp"
      quality={85}
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Indicador de fecha en la esquina superior derecha -->
    {project.date && (
      <div class="absolute top-3 right-3 bg-green-600/90 backdrop-blur-sm text-white text-xs font-medium px-2 py-1 rounded-full">
        {new Date(project.date).getFullYear()}
      </div>
    )}
  </div>

  <!-- Contenido -->
  <div class="p-4 sm:p-6 flex flex-col flex-grow">
    <!-- Título con altura mínima optimizada para móvil -->
    <div class="mb-3 min-h-[2.5rem] sm:min-h-[3.5rem] flex items-center">
      <h3 class="text-lg sm:text-xl font-bold text-white leading-tight line-clamp-2">
        {project.title}
      </h3>
    </div>
    
    <!-- Descripción con límite -->
    <div class="text-gray-300 text-sm sm:text-base mb-4 leading-relaxed flex-grow">
      {project.description.length > MAX_DESCRIPTION_LENGTH ? (
        <span>
          <span class="description-text">
            {project.description.substring(0, MAX_DESCRIPTION_LENGTH)}...
          </span>
          <button 
            class="text-green-400 hover:text-green-300 font-medium ml-1 transition-colors duration-200 underline underline-offset-2 cursor-pointer"
            onclick={`window.location.href='/projects/${project.slug}'`}
          >
            Ver más
          </button>
        </span>
      ) : (
        <span>{project.description}</span>
      )}
    </div>

    <!-- Tecnologías con límite y mejor responsive -->
    <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-4 sm:mb-6">
      {project.technologies.slice(0, MAX_VISIBLE_TAGS).map((tech) => (
        <span class="bg-green-500/20 text-green-300 px-2 sm:px-3 py-1 rounded-full text-xs font-medium whitespace-nowrap">
          {tech}
        </span>
      ))}
      {project.technologies.length > MAX_VISIBLE_TAGS && (
        <button 
          class="bg-slate-600/50 hover:bg-green-500/20 text-slate-300 hover:text-green-300 px-2 sm:px-3 py-1 rounded-full text-xs font-medium transition-all duration-200 whitespace-nowrap cursor-pointer"
          onclick={`window.location.href='/projects/${project.slug}'`}
        >
          +{project.technologies.length - MAX_VISIBLE_TAGS} más
        </button>
      )}
    </div>

    <!-- Enlaces optimizados para móvil -->
    <div class="flex flex-col gap-2 sm:gap-3 mt-auto">
      <!-- Fila principal de botones -->
      <div class="flex gap-2 sm:gap-3">
        {project.githubUrl && (
          <a 
            href={project.githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex-1 flex items-center justify-center bg-slate-600 hover:bg-green-600 text-white px-3 sm:px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105"
          >
            <svg class="w-4 h-4 mr-1 sm:mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 30 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="hidden xs:inline">GitHub</span>
          </a>
        )}
        
        {project.liveUrl && (
          <a 
            href={project.liveUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex-1 flex items-center justify-center border border-green-500 text-green-400 hover:bg-green-500 hover:text-white px-3 sm:px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105"
          >
            <svg class="w-4 h-4 mr-1 sm:mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            <span class="hidden xs:inline">Demo</span>
          </a>
        )}
      </div>
      
      <!-- Botón "Ver más" en fila separada para mejor UX móvil -->
      <a 
        href={`/projects/${project.slug}`} 
        class="flex items-center justify-center border border-slate-500 text-gray-300 hover:bg-slate-600 hover:text-white px-3 sm:px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105"
      >
        <svg class="w-4 h-4 mr-1 sm:mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Ver detalles
      </a>
    </div>
  </div>
</div>

<style>
  /* Utilidades para texto truncado */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Breakpoint personalizado para pantallas muy pequeñas */
  @media (min-width: 480px) {
    .xs\:inline {
      display: inline;
    }
  }
</style>