---
import { type Modal } from '@/types';

export interface Props {
  modal: Modal;
}

const { modal } = Astro.props;

const bgColorClass = {
  green: 'bg-green-500/20',
  red: 'bg-red-500/20',
  yellow: 'bg-yellow-500/20',
  blue: 'bg-blue-500/20'
}[modal.x_background] || 'bg-gray-500/20';

const iconColorClass = {
  green: 'text-green-400',
  red: 'text-red-400',
  yellow: 'text-yellow-400',
  blue: 'text-blue-400'
}[modal.x_background] || 'text-gray-400';
---

<div id={modal.type} class="modal-container hidden">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <div class="modal-inner">
      <div class={`mx-auto flex h-12 w-12 items-center justify-center rounded-full ${bgColorClass}`}>
        <svg class={`h-6 w-6 ${iconColorClass}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={modal.dimensions}/>
        </svg>
      </div>
      <div class="mt-4 text-center">
        <h3 class="text-2xl font-bold leading-6 text-white">{modal.title}</h3>
        <div class="mt-2">
          <p class="text-gray-300">{modal.message}</p>
        </div>
      </div>
      <div class="mt-6 flex justify-center">
        <button id={modal.css_id} type="button" class="modal-close-btn">
          De acuerdo (<span id="countdown">5</span>)
        </button>
      </div>
    </div>
  </div>
</div>