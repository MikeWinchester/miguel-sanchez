---
import ProjectCard from './ProjectCard.astro';
import { personalInfo } from '@/data/personal';
import type { Project } from '@/types';

const projectFiles: Record<string, { frontmatter: Project }> = import.meta.glob('../content/projects/*.mdx', { eager: true });

// Ordenar proyectos por fecha (más recientes primero)
const projects = Object.values(projectFiles)
  .map((module) => ({
    ...module.frontmatter,
    id: module.frontmatter.slug || module.frontmatter.title.toLowerCase().replace(/\s+/g, '-'),
    // Convertir fecha a objeto Date para ordenamiento
    dateObj: module.frontmatter.date ? new Date(module.frontmatter.date) : new Date(0)
  }))
  .sort((a, b) => b.dateObj.getTime() - a.dateObj.getTime()); // Más recientes primero

const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<section id="projects" class="py-24 bg-slate-900">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="animate-on-scroll">
      <div class="text-center mb-20">
        <h2 class="text-3xl md:text-4xl font-bold text-green-400 mb-4">
          Mis Proyectos
        </h2>
        <div class="w-24 h-1 bg-green-500 mx-auto mb-6"></div>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Una selección de proyectos que demuestran mis habilidades y experiencia en desarrollo web.
        </p>
      </div>

      <!-- Proyectos Destacados -->
      {featuredProjects.length > 0 && (
        <div class="mb-20">
          <h3 class="text-2xl font-bold text-white mb-10">Proyectos Destacados</h3>
          <div class="relative">
            <div class="relative flex items-center">
              {/* Botones superpuestos para móvil */}
              {((featuredProjects.length > 1)) && (
                <>
                  <button 
                    id="featured-prev-mobile" 
                    class="md:hidden absolute left-2 top-1/2 -translate-y-1/2 z-20 bg-green-700/30 hover:bg-green-600/80 active:bg-green-600 text-white p-2 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/50 backdrop-blur-sm border border-green-500/20 hover:border-green-500/60 opacity-40 hover:opacity-100 active:opacity-100"
                    aria-label="Proyecto anterior"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button 
                    id="featured-next-mobile" 
                    class="md:hidden absolute right-2 top-1/2 -translate-y-1/2 z-20 bg-green-700/30 hover:bg-green-600/80 active:bg-green-600 text-white p-2 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/50 backdrop-blur-sm border border-green-500/20 hover:border-green-500/60 opacity-40 hover:opacity-100 active:opacity-100"
                    aria-label="Siguiente proyecto"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </>
              )}

              {/* Botones para desktop */}
              {((featuredProjects.length > 2)) && (
                <>
                  <button 
                    id="featured-prev" 
                    class="hidden md:block absolute left-0 z-10 bg-green-700/90 hover:bg-green-600 text-white p-3 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/25 backdrop-blur-sm border-2 border-green-500/30 hover:border-green-500/60"
                    aria-label="Proyecto anterior"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button 
                    id="featured-next" 
                    class="hidden md:block absolute right-0 z-10 bg-green-700/90 hover:bg-green-600 text-white p-3 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/25 backdrop-blur-sm border-2 border-green-500/30 hover:border-green-500/60"
                    aria-label="Siguiente proyecto"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </>
              )}
              
              <div class={`overflow-hidden w-full ${featuredProjects.length > 2 ? 'md:mx-16' : ''}`}>
                <div id="featured-carousel" class="flex transition-transform duration-500 ease-in-out">
                  {featuredProjects.map((project) => (
                    <div class="carousel-item flex-shrink-0 w-full md:w-1/2 px-2 md:px-4">
                      <ProjectCard project={project} />
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      <!-- Otros Proyectos -->
      {otherProjects.length > 0 && (
        <div class="mb-20">
          <h3 class="text-2xl font-bold text-white mb-10">Otros Proyectos</h3>
          <div class="relative">
            <div class="relative flex items-center">
              {/* Botones superpuestos para móvil */}
              {((otherProjects.length > 1)) && (
                <>
                  <button 
                    id="other-prev-mobile" 
                    class="md:hidden absolute left-2 top-1/2 -translate-y-1/2 z-20 bg-green-700/30 hover:bg-green-600/80 active:bg-green-600 text-white p-2 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/50 backdrop-blur-sm border border-green-500/20 hover:border-green-500/60 opacity-40 hover:opacity-100 active:opacity-100"
                    aria-label="Proyecto anterior"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button 
                    id="other-next-mobile" 
                    class="md:hidden absolute right-2 top-1/2 -translate-y-1/2 z-20 bg-green-700/30 hover:bg-green-600/80 active:bg-green-600 text-white p-2 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/50 backdrop-blur-sm border border-green-500/20 hover:border-green-500/60 opacity-40 hover:opacity-100 active:opacity-100"
                    aria-label="Siguiente proyecto"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </>
              )}

              {/* Botones para desktop */}
              {((otherProjects.length > 2)) && (
                <>
                  <button 
                    id="other-prev" 
                    class="hidden md:block absolute left-0 z-10 bg-green-700/90 hover:bg-green-600 text-white p-3 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/25 backdrop-blur-sm border-2 border-green-500/30 hover:border-green-500/60"
                    aria-label="Proyecto anterior"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button 
                    id="other-next" 
                    class="hidden md:block absolute right-0 z-10 bg-green-700/90 hover:bg-green-600 text-white p-3 rounded-full transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/25 backdrop-blur-sm border-2 border-green-500/30 hover:border-green-500/60"
                    aria-label="Siguiente proyecto"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                </>
              )}
              
              <div class={`overflow-hidden w-full ${otherProjects.length > 2 ? 'md:mx-16' : ''}`}>
                <div id="other-carousel" class="flex transition-transform duration-500 ease-in-out">
                  {otherProjects.map((project) => (
                    <div class="carousel-item flex-shrink-0 w-full md:w-1/2 px-2 md:px-4">
                      <ProjectCard project={project} />
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      <!-- Enlace a GitHub -->
      <div class="text-center">
        <a 
          href={personalInfo.socialLinks.github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center bg-green-700 hover:bg-green-800 text-white px-8 py-3 rounded-lg font-medium transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-slate-900 hover:shadow-lg hover:shadow-green-800/25"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 30 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Ver más en GitHub
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline>
// Funciones para controlar visibilidad de botones según el número de proyectos
function updateCarouselButtons() {
  const featuredItems = document.querySelectorAll('#featured-carousel .carousel-item');
  const otherItems = document.querySelectorAll('#other-carousel .carousel-item');
  
  const featuredPrev = document.getElementById('featured-prev');
  const featuredNext = document.getElementById('featured-next');
  const featuredMobilePrev = document.getElementById('featured-prev-mobile');
  const featuredMobileNext = document.getElementById('featured-next-mobile');
  
  const otherPrev = document.getElementById('other-prev');
  const otherNext = document.getElementById('other-next');
  const otherMobilePrev = document.getElementById('other-prev-mobile');
  const otherMobileNext = document.getElementById('other-next-mobile');
  
  const isMobile = window.innerWidth < 768;
  
  // Proyectos destacados
  if (featuredPrev && featuredNext) {
    const shouldShowDesktop = !isMobile && featuredItems.length > 2;
    featuredPrev.style.display = shouldShowDesktop ? 'block' : 'none';
    featuredNext.style.display = shouldShowDesktop ? 'block' : 'none';
  }
  
  if (featuredMobilePrev && featuredMobileNext) {
    const shouldShowMobile = isMobile && featuredItems.length > 1;
    featuredMobilePrev.style.display = shouldShowMobile ? 'block' : 'none';
    featuredMobileNext.style.display = shouldShowMobile ? 'block' : 'none';
  }
  
  // Otros proyectos
  if (otherPrev && otherNext) {
    const shouldShowDesktop = !isMobile && otherItems.length > 2;
    otherPrev.style.display = shouldShowDesktop ? 'block' : 'none';
    otherNext.style.display = shouldShowDesktop ? 'block' : 'none';
  }
  
  if (otherMobilePrev && otherMobileNext) {
    const shouldShowMobile = isMobile && otherItems.length > 1;
    otherMobilePrev.style.display = shouldShowMobile ? 'block' : 'none';
    otherMobileNext.style.display = shouldShowMobile ? 'block' : 'none';
  }
}

// Ejecutar al cargar y al cambiar el tamaño de ventana
document.addEventListener('DOMContentLoaded', updateCarouselButtons);
window.addEventListener('resize', updateCarouselButtons);
</script>

<script is:inline src="/js/carouselController.js" defer></script>