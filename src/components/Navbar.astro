---
import { personalInfo } from '@/data/personal';
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-dark-900 border-b border-dark-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Nombre -->
      <div class="flex-shrink-0">
        <a href="#inicio" class="text-xl font-bold text-primary-400 hover:text-primary-300 transition-colors duration-300">
          {personalInfo.name}
        </a>
      </div>

      <!-- Menu Desktop -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#inicio" class="nav-link">Inicio</a>
          <a href="#sobre-mi" class="nav-link">Sobre mí</a>
          <a href="#experiencia" class="nav-link">Experiencia</a>
          <a href="#habilidades" class="nav-link">Habilidades</a>
          <a href="#proyectos" class="nav-link">Proyectos</a>
          <a href="#contacto" class="nav-link">Contacto</a>
        </div>
      </div>

      <!-- Menu Mobile Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-300 hover:text-primary-400 focus:outline-none focus:text-primary-400 transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div id="mobile-menu" class="md:hidden hidden bg-dark-800 border-t border-dark-700">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#inicio" class="mobile-nav-link">Inicio</a>
      <a href="#sobre-mi" class="mobile-nav-link">Sobre mí</a>
      <a href="#experiencia" class="mobile-nav-link">Experiencia</a>
      <a href="#habilidades" class="mobile-nav-link">Habilidades</a>
      <a href="#proyectos" class="mobile-nav-link">Proyectos</a>
      <a href="#contacto" class="mobile-nav-link">Contacto</a>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Cerrar menu mobile al hacer click en un enlace
    const mobileLinks = document.querySelectorAll('.mobile-nav-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
  });
</script>
