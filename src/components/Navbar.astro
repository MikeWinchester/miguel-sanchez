---
import { personalInfo } from '@/data/personal';
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-900 border-b border-slate-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Nombre -->
      <div class="flex-shrink-0">
        <a href="#inicio" class="text-xl font-bold text-green-400 hover:text-green-300 transition-colors duration-300">
          {personalInfo.name}
        </a>
      </div>

      <!-- Menu Desktop -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#inicio" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Inicio</a>
          <a href="#sobre-mi" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Sobre mí</a>
          <a href="#experiencia" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Experiencia</a>
          <a href="#habilidades" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Habilidades</a>
          <a href="#proyectos" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Proyectos</a>
          <a href="#contacto" class="text-gray-300 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-300 hover:text-green-400">Contacto</a>
        </div>
      </div>

      <!-- Menu Mobile Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-300 hover:text-green-400 focus:outline-none focus:text-green-400 transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div id="mobile-menu" class="md:hidden hidden bg-slate-800 border-t border-slate-700">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#inicio" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Inicio</a>
      <a href="#sobre-mi" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Sobre mí</a>
      <a href="#experiencia" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Experiencia</a>
      <a href="#habilidades" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Habilidades</a>
      <a href="#proyectos" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Proyectos</a>
      <a href="#contacto" class="block text-gray-300 px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 hover:text-green-400 hover:bg-slate-700">Contacto</a>
    </div>
  </div>
</nav>

<script is:inline src="js/mobileMenu.js" defer></script>